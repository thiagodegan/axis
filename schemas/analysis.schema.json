{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "analysis.schema.json",
  "title": "FileAnalysis",
  "type": "object",
  "required": ["version", "file", "ref", "language", "units"],
  "properties": {
    "version": { "type": "string", "const": "1.0.0" },
    "file": {
      "type": "object",
      "required": ["path", "sha"],
      "properties": {
        "path": { "type": "string", "minLength": 1 },
        "sha": { "type": "string", "minLength": 7 },
        "repo": { "type": "string" },
        "owner": { "type": "string" },
        "size_bytes": { "type": "integer", "minimum": 0 }
      },
      "additionalProperties": false
    },
    "ref": { "type": "string", "minLength": 1, "description": "branch ou commit sha" },
    "language": { "type": "string", "minLength": 1 },
    "detector": {
      "type": "object",
      "properties": {
        "method": { "type": "string", "enum": ["extension", "heuristic", "model", "mixed"] },
        "confidence": { "type": "number", "minimum": 0, "maximum": 1 }
      },
      "additionalProperties": false
    },
    "units": {
      "type": "array",
      "minItems": 1,
      "items": {
        "oneOf": [
          { "$ref": "unit.generic.schema.json" },
          { "$ref": "unit.cobol.schema.json" }
        ]
      }
    },
    "summary": {
      "type": "object",
      "properties": {
        "unit_count": { "type": "integer", "minimum": 1 },
        "diagram_suggestion": {
          "type": "string",
          "enum": ["flowchart", "sequence", "state", "class", "er", "dfd", "none"]
        },
        "notes": { "type": "string", "maxLength": 4000 }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
